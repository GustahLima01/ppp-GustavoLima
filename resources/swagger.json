    "schemas": {
      "ClinicUserResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "email": { "type": "string" }
        }
      },
      "PatientResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "birthdate": { "type": "string", "format": "date" },
          "clinicUserId": { "type": "string" }
